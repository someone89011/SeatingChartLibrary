<Window x:Class="SeatingChartLibrary.Views.EditSeatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="編輯座位屬性" Height="300" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="RowName:" Grid.Row="0"/>
        <ComboBox x:Name="RowNameComboBox" Grid.Row="1" IsEditable="True"/>
        <Label Content="Number:" Grid.Row="2"/>
        <TextBox x:Name="NumberTextBox" Grid.Row="3"/>
        <Label Content="Person Name:" Grid.Row="4"/>
        <TextBox x:Name="PersonNameTextBox" Grid.Row="5"/>
        <Label Content="Device Type:" Grid.Row="6"/>
        <TextBox x:Name="DeviceTypeTextBox" Grid.Row="7"/>
        <Label Content="Device Number:" Grid.Row="8"/>
        <TextBox x:Name="DeviceNumberTextBox" Grid.Row="9"/>
        <Button Content="OK" Grid.Row="10" Click="OkButton_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>