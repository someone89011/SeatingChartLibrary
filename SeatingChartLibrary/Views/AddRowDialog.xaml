<Window x:Class="SeatingChartLibrary.Views.AddRowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加 Row" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="RowNameTextBox" Grid.Row="0" Margin="0,0,0,10"/>
        <Button Content="OK" Grid.Row="1" Click="OkButton_Click"/>
    </Grid>
</Window>