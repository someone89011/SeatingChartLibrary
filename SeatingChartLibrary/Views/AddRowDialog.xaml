<Window x:Class="SeatingChartLibrary.Views.AddRowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加 Row" Height="150" Width="300">
    <Grid Margin="10">
        <Label Content="Row 名稱:" VerticalAlignment="Top"/>
        <TextBox x:Name="RowNameTextBox" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,60,0,0">
            <Button Content="確定" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="取消" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>